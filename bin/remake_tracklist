#!/usr/bin/env perl

use myperl DEBUG => 1;
use autodie qw< :all >;

use MP3::Tag;

use Music;


my $album = dir(shift);
unless ( -d $album and ($ALBUM_DIR->contains($album) or $MISC_DIR->contains($album)) )
{
	usage_error("I need an album directory to remake the tracklist of");
}

generate_tracklist($album);
