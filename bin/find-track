#! /usr/bin/env perl

use myperl;
use autodie qw< :all >;

use File::Next;
use PerlX::bash;

use Music;


my $tracks = File::Next::files({ file_filter => sub { /@ARGV/i } }, track_dirs());
say file($_)->absolute while $_ = $tracks->();


my $pattern = qr/@ARGV/i;
my @mixes = grep { grep { /$pattern/ } $_->slurp } glob($TRACKLIST_DIR->file("[CRPMmg]*", "*.m3u"));
if (@mixes)
{
	say '';
	say "in mixes:";
	foreach (@mixes)
	{
		say;
		say foreach map { "\t$_" } bash \lines => qw< ack >, $pattern, $_;
	}
}
